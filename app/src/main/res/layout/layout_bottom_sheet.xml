<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/bottomSheetContainer"
    android:layout_width="match_parent"
    android:background="@drawable/bottom_sheet_background"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Other Methods"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="15sp"
        android:textColor="#7D848C"
        android:fontFamily="@font/robotomedium"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginBottom="10dp"
        android:background="#F6F6F6"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/linear2"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/p1"/>

        <TextView
            android:id="@+id/exportpdf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Export as PDF File"
            android:layout_marginTop="4dp"
            android:textSize="12sp"
            android:layout_marginStart="10dp"
            android:textColor="#000000"
            android:fontFamily="@font/robotoregular"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/linear3"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/t1"/>

        <TextView
            android:id="@+id/exporttxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Export as Txt File"
            android:layout_marginTop="4dp"
            android:layout_marginStart="10dp"
            android:textSize="12sp"
            android:textColor="#000000"
            android:fontFamily="@font/robotoregular"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/linear4"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/cop"/>

        <TextView
            android:id="@+id/copyclip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Copy Clipboard"
            android:layout_marginTop="4dp"
            android:layout_marginStart="10dp"
            android:textSize="12sp"
            android:textColor="#000000"
            android:fontFamily="@font/robotoregular"/>

    </LinearLayout>



</LinearLayout>